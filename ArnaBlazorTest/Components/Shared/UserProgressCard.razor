@using ArnaBlazorTest.Models

<div class="card mb-3">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                <h5 class="card-title">@User.Username</h5>
                <p class="card-text text-muted">@User.Email</p>
            </div>
            <div class="text-end">
                <h6>Overall Progress</h6>
                <p class="h4 mb-0">@(CompletedCount)/@(TotalCount)</p>
            </div>
        </div>

        <div class="progress mb-3">
            <div class="progress-bar" role="progressbar" 
                 style="width: @(CompletedCount * 100 / Math.Max(1, TotalCount))%">
            </div>
        </div>

        <div class="row text-center">
            <div class="col">
                <h6>Average Score</h6>
                <p class="h4 mb-0">@AverageScore.ToString("F1")%</p>
            </div>
            <div class="col">
                <h6>Last Activity</h6>
                <p class="mb-0">@(LastActivity?.ToString("MMM dd") ?? "No activity")</p>
            </div>
        </div>

        @if (ShowViewButton)
        {
            <div class="mt-3 text-end">
                <a href="/manager/user/@User.Id" class="btn btn-primary">View Details</a>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public User User { get; set; } = null!;

    [Parameter]
    public int CompletedCount { get; set; }

    [Parameter]
    public int TotalCount { get; set; }

    [Parameter]
    public double AverageScore { get; set; }

    [Parameter]
    public DateTime? LastActivity { get; set; }

    [Parameter]
    public bool ShowViewButton { get; set; } = true;
} 